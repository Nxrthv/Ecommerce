              <button type="submit" class="search-btn text-white px-6 rounded-r-full flex items-center justify-center">
                <i class="fas fa-search"></i>
              </button>
            </div>
            <div class="absolute top-full left-0 right-0 bg-white mt-1 rounded-md shadow-lg hidden" id="search-suggestions">

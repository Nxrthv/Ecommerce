                  <a href="#" 
                     class="block py-1 text-sm hover:text-ali-red mobile-category-link"
                     data-category="<%= category.name %>"
                     data-slug="<%= category.slug || category.name.toLowerCase() %>">
                    <i class="fas fa-<%= category.icon || 'tag' %> mr-2"></i> <%= category.name %>

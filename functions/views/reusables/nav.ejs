              <div class="py-2">
                <% categories.forEach(category => { %>
                  <a href="#" 
                     class="block px-4 py-2 text-sm hover:bg-gray-100 category-link"
                     data-category="<%= category.name %>"
                     data-slug="<%= category.slug || category.name.toLowerCase() %>">
                    <i class="fas fa-<%= category.icon || 'tag' %> w-6"></i> <%= category.name %>
                  </a>
                <% }) %>
              </div>
            </div>
          </div>
        </div>            
        

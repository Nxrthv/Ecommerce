              <i class="fas fa-user-plus mr-2"></i> Registrarse
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <script>
    // Mostrar loader al iniciar navegación
    document.querySelectorAll('a[href]:not(.category-link):not(.mobile-category-link)').forEach(link => {
      link.addEventListener('click', function (e) {
        const target = e.currentTarget;
        const href = target.getAttribute('href');
  
        // Evita activar en anclas internas o enlaces con target="_blank"
        if (href.startsWith('#') || target.target === '_blank') return;
  
        // Mostrar loader
        const loader = document.getElementById('page-loader');
        loader.classList.remove('opacity-0', 'pointer-events-none');
        loader.classList.add('opacity-100');
  
        // Delay opcional para simular carga
        setTimeout(() => {
          window.location = href;
        }, 1000);
        e.preventDefault();
      });
    });
  
    // Ocultar loader al llegar
    window.addEventListener('load', () => {
      const loader = document.getElementById('page-loader');
      loader.classList.add('opacity-0', 'pointer-events-none');
      
      // Inicializar filtrado por categorías
      initCategoryFiltering();
    });
    
    // Función para inicializar el filtrado por categorías
    function initCategoryFiltering() {
      // Obtener elementos del DOM
      const searchInput = document.getElementById('search-input');
      const mobileSearchInput = document.getElementById('mobile-search-input');
      const categoryInput = document.getElementById('category-input');
      const mobileCategoryInput = document.getElementById('mobile-category-input');
      const categoryTags = document.getElementById('category-tags');
      const mobileCategoryTags = document.getElementById('mobile-category-tags');
      const searchForm = document.getElementById('search-form');
      const mobileSearchForm = document.getElementById('mobile-search-form');
      
      // Obtener categoría de la URL si existe
      const urlParams = new URLSearchParams(window.location.search);
      const categoryParam = urlParams.get('category');
      
      if (categoryParam) {
        // Buscar el nombre de la categoría basado en el slug
        const categoryLinks = document.querySelectorAll('.category-link');
        let categoryName = '';
        
        categoryLinks.forEach(link => {
          if (link.dataset.slug === categoryParam) {
            categoryName = link.dataset.category;
          }
        });
        
        if (categoryName) {
          // Establecer la categoría en los inputs
          categoryInput.value = categoryParam;
          mobileCategoryInput.value = categoryParam;
          
          // Crear etiquetas de categoría
          createCategoryTag(categoryName, categoryParam, categoryTags);
          createCategoryTag(categoryName, categoryParam, mobileCategoryTags);
        }
      }
      
      // Agregar event listeners para los enlaces de categoría
      document.querySelectorAll('.category-link').forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          
          const category = this.dataset.category;
          const slug = this.dataset.slug;
          
          // Establecer la categoría en el input oculto
          categoryInput.value = slug;
          
          // Limpiar etiquetas existentes
          categoryTags.innerHTML = '';
          
          // Crear etiqueta de categoría
          createCategoryTag(category, slug, categoryTags);
          
          // Enfocar el input de búsqueda y aplicar animación
          searchInput.focus();
          searchInput.classList.add('search-highlight');
          setTimeout(() => {
            searchInput.classList.remove('search-highlight');
          }, 1000);
          
          // Filtrar productos automáticamente
          searchForm.submit();
        });
      });
      
      // Agregar event listeners para los enlaces de categoría móviles
      document.querySelectorAll('.mobile-category-link').forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          
          const category = this.dataset.category;
          const slug = this.dataset.slug;
          
          // Establecer la categoría en el input oculto
          mobileCategoryInput.value = slug;
          
          // Limpiar etiquetas existentes
          mobileCategoryTags.innerHTML = '';
          
          // Crear etiqueta de categoría
          createCategoryTag(category, slug, mobileCategoryTags);
          
          // Cerrar el menú móvil
          document.getElementById('mobile-menu').classList.add('hidden');
          
          // Enfocar el input de búsqueda y aplicar animación
          mobileSearchInput.focus();
          mobileSearchInput.classList.add('search-highlight');
          setTimeout(() => {
            mobileSearchInput.classList.remove('search-highlight');
          }, 1000);
          
          // Filtrar productos automáticamente
          mobileSearchForm.submit();
        });
      });
    }
    
    // Función para crear etiquetas de categoría
    function createCategoryTag(categoryName, slug, container) {
      const tag = document.createElement('div');
      tag.className = 'category-tag';
      tag.innerHTML = `
        <span>${categoryName}</span>
        <span class="remove-icon ml-2 cursor-pointer" data-slug="${slug}">×</span>
      `;
      
      // Agregar event listener para eliminar la etiqueta
      tag.querySelector('.remove-icon').addEventListener('click', function() {
        // Eliminar la etiqueta
        tag.remove();
        
        // Limpiar el input oculto
        const isDesktop = container.id === 'category-tags';
        const categoryInput = isDesktop ? 
          document.getElementById('category-input') : 
          document.getElementById('mobile-category-input');
        
        categoryInput.value = '';
        
        // Enviar el formulario para actualizar los resultados
        const form = isDesktop ? 
          document.getElementById('search-form') : 
          document.getElementById('mobile-search-form');
        
        form.submit();
      });
      
      container.appendChild(tag);
    }
  </script>  
  
  <script>
    // Mobile menu toggle
    document.getElementById('mobile-menu-button').addEventListener('click', function() {
      const mobileMenu = document.getElementById('mobile-menu');
      mobileMenu.classList.toggle('hidden');
    });
    
    // Search suggestions
    const searchInput = document.querySelector('input[name="q"]');
    const searchSuggestions = document.getElementById('search-suggestions');
    
    if (searchInput && searchSuggestions) {
      searchInput.addEventListener('focus', function() {
        // Only show if there's text
        if (this.value.length > 0) {
          searchSuggestions.classList.remove('hidden');
        }
      });
      
      searchInput.addEventListener('blur', function() {
        // Hide with a small delay to allow clicking on suggestions
        setTimeout(() => {
          searchSuggestions.classList.add('hidden');
        }, 200);
      });
      
      searchInput.addEventListener('input', function() {
        if (this.value.length > 0) {
          // Show mock suggestions (in a real app, you'd fetch these from an API)
          searchSuggestions.innerHTML = `
            <div class="py-2">
              <div class="px-4 py-1 text-xs font-medium text-gray-500 uppercase">Sugerencias</div>
              <a href="/products?q=${this.value}" class="block px-4 py-2 text-sm hover:bg-gray-100">${this.value}</a>
              <a href="/products?q=${this.value}%20barato" class="block px-4 py-2 text-sm hover:bg-gray-100">${this.value} barato</a>
              <a href="/products?q=${this.value}%20oferta" class="block px-4 py-2 text-sm hover:bg-gray-100">${this.value} oferta</a>
            </div>
          `;
          searchSuggestions.classList.remove('hidden');
        } else {
          searchSuggestions.classList.add('hidden');
        }
      });
    }
  </script>

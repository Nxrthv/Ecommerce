    <script>
        // Login tabs functionality
        const tabs = document.querySelectorAll(".login-tab");
        const alertContainer = document.getElementById("alert-container");

        tabs.forEach((tab) => {
            tab.addEventListener("click", () => {
                // Hide all tab contents
                document.querySelectorAll(".tab-content").forEach((content) => {
                    content.classList.remove("active");
                });

                // Deactivate all tabs
                tabs.forEach((t) => {
                    t.classList.remove("active");
                });

                // Activate clicked tab and its content
                tab.classList.add("active");
                document
                    .getElementById(`tab-${tab.dataset.tab}`)
                    .classList.add("active");
                
                // Clear any error messages
                alertContainer.classList.remove("show");
                alertContainer.textContent = "";
            });
        });

        // Password toggle functionality
        const passwordToggles = document.querySelectorAll(".password-toggle");
        passwordToggles.forEach((toggle) => {
            toggle.addEventListener("click", function () {
                const passwordInput = this.previousElementSibling;
                const icon = this.querySelector("i");

                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                    icon.classList.remove("fa-eye");
                    icon.classList.add("fa-eye-slash");
                } else {
                    passwordInput.type = "password";
                    icon.classList.remove("fa-eye-slash");
                    icon.classList.add("fa-eye");
                }
            });
        });

        // Password strength meter
        const signupPassword = document.getElementById("signup-password");
        const strengthMeterFill = document.getElementById("strength-meter-fill");
        const strengthLabel = document.getElementById("strength-label");

        signupPassword.addEventListener("input", function () {
            const password = this.value;
            let strength = 0;

            // Length check
            if (password.length >= 8) {
                strength += 1;
            }

            // Contains lowercase
            if (/[a-z]/.test(password)) {
                strength += 1;
            }

            // Contains uppercase
            if (/[A-Z]/.test(password)) {
                strength += 1;
            }

            // Contains number
            if (/[0-9]/.test(password)) {
                strength += 1;
            }

            // Contains special character
            if (/[^A-Za-z0-9]/.test(password)) {
                strength += 1;
            }

            // Update strength meter
            let width = 0;
            let color = "";
            let label = "";

            if (password.length === 0) {
                width = 0;
                color = "var(--danger)";
                label = "Débil";
                strengthLabel.className = "strength-label weak";
            } else if (strength <= 2) {
                width = 33;
                color = "var(--danger)";
                label = "Débil";
                strengthLabel.className = "strength-label weak";
            } else if (strength <= 4) {
                width = 66;
                color = "var(--warning)";
                label = "Media";
                strengthLabel.className = "strength-label medium";
            } else {
                width = 100;
                color = "var(--success)";
                label = "Segura";
                strengthLabel.className = "strength-label strong";
            }

            strengthMeterFill.style.width = `${width}%`;
            strengthMeterFill.style.backgroundColor = color;
            strengthLabel.textContent = label;
        });

        // Form validation
        const signinForm = document.getElementById("signin-form");
        const signupForm = document.getElementById("signup-form");

        // Show error message
        function showError(message) {
            alertContainer.textContent = message;
            alertContainer.className = "alert alert-error show";
        }

        // Login validation
        signinForm.addEventListener("submit", function (e) {
            const email = document.getElementById("signin-email").value;
            const password = document.getElementById("signin-password").value;

            if (!email || !password) {
                e.preventDefault();
                showError("Por favor, completa todos los campos.");
                return;
            }

            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                e.preventDefault();
                showError("Por favor, introduce un correo electrónico válido.");
                return;
            }

            // Let form submit normally
        });

        // Registration validation
        signupForm.addEventListener("submit", function (e) {
            const name = document.getElementById("signup-name").value;
            const email = document.getElementById("signup-email").value;
            const password = document.getElementById("signup-password").value;
            const agreeTerms = document.getElementById("agree-terms").checked;

            if (!name || !email || !password) {
                e.preventDefault();
                showError("Por favor, completa todos los campos.");
                return;
            }

            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                e.preventDefault();
                showError("Por favor, introduce un correo electrónico válido.");
                return;
            }

            // Password strength validation
            let strength = 0;
            if (password.length >= 8) strength += 1;
            if (/[a-z]/.test(password)) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/[0-9]/.test(password)) strength += 1;
            if (/[^A-Za-z0-9]/.test(password)) strength += 1;

            if (strength < 3) {
                e.preventDefault();
                showError("Por favor, crea una contraseña más segura.");
                return;
            }

            if (!agreeTerms) {
                e.preventDefault();
                showError("Debes aceptar los Términos y la Política de Privacidad.");
                return;
            }

            // Let form submit normally
        });

        // Check for URL parameters to show error message
        window.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            
            if (error === 'invalid') {
                showError("Correo electrónico o contraseña incorrectos.");
            } else if (error === 'exists') {
                showError("Este correo electrónico ya está registrado.");
                document.querySelector('[data-tab="signup"]').click();
            }
        });
    </script>

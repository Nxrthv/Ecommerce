<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | GEN Z - Tienda Tecnológica</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<div class="bg-gray-100 py-8">
  <div class="container max-w-6xl mx-auto px-4">
    <!-- Checkout Header -->
    <div class="mb-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-2">
        <h1 class="text-2xl font-bold text-gray-800">Checkout</h1>
        <div class="text-sm text-gray-500 mt-2 md:mt-0">
          <span>¿Necesitas ayuda? Llámanos al 01 712 - 3512</span>
          <div class="text-xs">Horario de atención: 9:00 am a 6:00 pm</div>
        </div>
      </div>
      
      <!-- Progress Steps -->
      <div class="flex items-center mb-6 overflow-x-auto py-2">
        <div class="flex items-center">
          <div id="step-1-indicator" class="flex items-center justify-center w-8 h-8 rounded-full bg-red-600 text-white font-bold">
            1
          </div>
          <span class="ml-2 font-medium whitespace-nowrap">Identificación</span>
        </div>
        <div class="w-12 h-1 mx-3 bg-gray-300" id="line-1-2"></div>
        <div class="flex items-center">
          <div id="step-2-indicator" class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-300 text-gray-600 font-bold">
            2
          </div>
          <span class="ml-2 text-gray-500 whitespace-nowrap">Entrega</span>
        </div>
        <div class="w-12 h-1 mx-3 bg-gray-300" id="line-2-3"></div>
        <div class="flex items-center">
          <div id="step-3-indicator" class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-300 text-gray-600 font-bold">
            3
          </div>
          <span class="ml-2 text-gray-500 whitespace-nowrap">Pago</span>
        </div>
      </div>
    </div>
    
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Left Column - Form -->
      <div class="w-full lg:w-2/3">
        <!-- Tab Content -->
        <div id="checkout-tabs">
          <!-- Step 1: Identification -->
          <div id="tab-identification" class="bg-white rounded-lg shadow-sm p-6">
            <div class="mb-6">
              <p class="text-sm text-gray-600 mb-4">
                Solicitamos únicamente la información esencial para la finalización de la compra.
              </p>
              
              <form id="identification-form">
                <!-- Personal Information -->
                <div class="mb-6">
                  <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Correo</label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                      required
                    >
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">
                        Nombre(s) <span class="text-red-600">*</span>
                      </label>
                      <input 
                        type="text" 
                        id="firstName" 
                        name="firstName" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                        required
                      >
                    </div>
                    <div>
                      <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">
                        Apellidos <span class="text-red-600">*</span>
                      </label>
                      <input 
                        type="text" 
                        id="lastName" 
                        name="lastName" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                        required
                      >
                    </div>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="mt-4">
                      <label for="dni" class="block text-sm font-medium text-gray-700 mb-1">DNI</label>
                      <input 
                        type="text" 
                        id="dni" 
                        name="dni" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                      >
                    </div>
                    
                    <div class="mt-4">
                      <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Teléfono / Móvil</label>
                      <input 
                        type="tel" 
                        id="phone" 
                        name="phone" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                      >
                    </div>
                  </div>
                </div>
                
                <!-- Terms and Conditions -->
                <div class="mb-6">
                  <div class="flex items-start mb-3">
                    <div class="flex items-center h-5">
                      <input 
                        id="terms" 
                        name="terms" 
                        type="checkbox" 
                        class="h-4 w-4 text-red-600 border-gray-300 rounded focus:ring-red-500" 
                        required
                      >
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="terms" class="text-gray-600">
                        He leído y acepto los <a href="#" class="text-blue-600 hover:underline">Términos y Condiciones</a> y <a href="#" class="text-blue-600 hover:underline">Políticas de privacidad</a>
                      </label>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input 
                        id="marketing" 
                        name="marketing" 
                        type="checkbox" 
                        class="h-4 w-4 text-red-600 border-gray-300 rounded focus:ring-red-500"
                      >
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="marketing" class="text-gray-600">
                        Autorizo el tratamiento de mis datos para fines de prospección y promoción comercial por parte de Coolbox
                      </label>
                    </div>
                  </div>
                </div>
                
                <!-- Continue Button -->
                <button 
                  type="button" 
                  class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-md transition-colors"
                  onclick="handleIdentificationStep()"
                >
                  Ir para la Entrega
                </button>
              </form>
            </div>
          </div>
          
          <!-- Step 2: Delivery -->
          <div id="tab-delivery" class="bg-white rounded-lg shadow-sm p-6 hidden">
            <div class="mb-6">
              <h3 class="text-lg font-bold mb-4">Información de Entrega</h3>
              
              <form id="delivery-form">
                <!-- Delivery Options -->
                <div class="mb-6">
                  <div class="flex flex-col space-y-3">
                    <div class="border border-gray-200 rounded-md p-4 cursor-pointer hover:border-red-500 transition-colors">
                      <div class="flex items-start">
                        <div class="flex items-center h-5 mt-1">
                          <input 
                            id="delivery-home" 
                            name="deliveryMethod" 
                            type="radio" 
                            value="home" 
                            class="h-4 w-4 text-red-600 border-gray-300 focus:ring-red-500" 
                            checked
                          >
                        </div>
                        <div class="ml-3">
                          <label for="delivery-home" class="font-medium text-gray-800">Envío a domicilio</label>
                          <p class="text-sm text-gray-600 mt-1">Recibe tu pedido en la dirección que indiques</p>
                        </div>
                        <div class="ml-auto">
                          <span class="text-green-600 font-medium">Gratis</span>
                        </div>
                      </div>
                    </div>
                    
                    <div class="border border-gray-200 rounded-md p-4 cursor-pointer hover:border-red-500 transition-colors">
                      <div class="flex items-start">
                        <div class="flex items-center h-5 mt-1">
                          <input 
                            id="delivery-store" 
                            name="deliveryMethod" 
                            type="radio" 
                            value="store" 
                            class="h-4 w-4 text-red-600 border-gray-300 focus:ring-red-500"
                          >
                        </div>
                        <div class="ml-3">
                          <label for="delivery-store" class="font-medium text-gray-800">Recojo en tienda</label>
                          <p class="text-sm text-gray-600 mt-1">Recoge tu pedido en la tienda de tu elección</p>
                        </div>
                        <div class="ml-auto">
                          <span class="text-green-600 font-medium">Gratis</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Address Information -->
                <div id="home-delivery-form" class="mb-6">
                  <h4 class="font-medium text-gray-800 mb-3">Dirección de entrega</h4>
                  
                  <div class="mb-4">
                    <label for="address" class="block text-sm font-medium text-gray-700 mb-1">
                      Dirección <span class="text-red-600">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="address" 
                      name="address" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                      required
                    >
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label for="district" class="block text-sm font-medium text-gray-700 mb-1">
                        Distrito <span class="text-red-600">*</span>
                      </label>
                      <select 
                        id="district" 
                        name="district" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                        required
                      >
                        <option value="">Seleccionar distrito</option>
                        <option value="Huanuco">Huanuco</option>
                      </select>
                    </div>
                    <div>
                      <label for="city" class="block text-sm font-medium text-gray-700 mb-1">
                        Ciudad <span class="text-red-600">*</span>
                      </label>
                      <select 
                        id="city" 
                        name="city" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                        required
                      >
                        <option value="">Seleccionar ciudad</option>
                        <option value="Huanuco">Huanuco</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="mt-4">
                    <label for="reference" class="block text-sm font-medium text-gray-700 mb-1">
                      Referencia
                    </label>
                    <input 
                      type="text" 
                      id="reference" 
                      name="reference" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                      placeholder="Ej: Frente al parque, casa azul, etc."
                    >
                  </div>
                </div>
                
                <div id="store-pickup-form" class="mb-6 hidden">
                  <h4 class="font-medium text-gray-800 mb-3">Selecciona una tienda</h4>
                  
                  <div class="mb-4">
                    <label for="store-location" class="block text-sm font-medium text-gray-700 mb-1">
                      Tienda <span class="text-red-600">*</span>
                    </label>
                    <select 
                      id="store-location" 
                      name="storeLocation" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                    >
                      <option value="">Seleccionar tienda</option>
                      <option value="store1">Tienda Centro Comercial Tottus (aqui no se cae el techo)</option>
                    </select>
                  </div>
                </div>
                
                <!-- Navigation Buttons -->
                <div class="flex flex-col sm:flex-row gap-3">
                  <button 
                    type="button" 
                    class="flex-1 border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-3 px-4 rounded-md transition-colors"
                    onclick="goToStep(1)"
                  >
                    Volver
                  </button>
                  <button 
                    type="button" 
                    class="flex-1 bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-md transition-colors"
                    onclick="handleDeliveryStep()"
                  >
                    Continuar al Pago
                  </button>
                </div>
              </form>
            </div>
          </div>
          
          <!-- Step 3: Payment -->
          <div id="tab-payment" class="bg-white rounded-lg shadow-sm p-6 hidden">
            <div class="mb-6">
              <h3 class="text-lg font-bold mb-4">Método de Pago</h3>
              
              <form id="payment-form" method="POST" action="/checkout">
                <!-- Payment Methods -->
                <div class="mb-6">
                  <div class="flex flex-col space-y-3">
                    <div class="border border-gray-200 rounded-md p-4 cursor-pointer hover:border-red-500 transition-colors">
                      <div class="flex items-start">
                        <div class="flex items-center h-5 mt-1">
                          <input 
                            id="payment-card" 
                            name="paymentMethod" 
                            type="radio" 
                            value="card" 
                            class="h-4 w-4 text-red-600 border-gray-300 focus:ring-red-500" 
                            checked
                          >
                        </div>
                        <div class="ml-3">
                          <label for="payment-card" class="font-medium text-gray-800">Tarjeta de crédito o débito</label>
                          <div class="flex space-x-2 mt-2">
                            <img src="https://via.placeholder.com/40x25" alt="Visa" class="h-6">
                            <img src="https://via.placeholder.com/40x25" alt="Mastercard" class="h-6">
                            <img src="https://via.placeholder.com/40x25" alt="American Express" class="h-6">
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="border border-gray-200 rounded-md p-4 cursor-pointer hover:border-red-500 transition-colors">
                      <div class="flex items-start">
                        <div class="flex items-center h-5 mt-1">
                          <input 
                            id="payment-yape" 
                            name="paymentMethod" 
                            type="radio" 
                            value="yape" 
                            class="h-4 w-4 text-red-600 border-gray-300 focus:ring-red-500"
                          >
                        </div>
                        <div class="ml-3">
                          <label for="payment-yape" class="font-medium text-gray-800">Yape</label>
                          <p class="text-sm text-gray-600 mt-1">Paga rápido y seguro con Yape</p>
                        </div>
                        <div class="ml-auto">
                          <img src="https://via.placeholder.com/40x25" alt="Yape" class="h-8">
                        </div>
                      </div>
                    </div>
                    
                    <div class="border border-gray-200 rounded-md p-4 cursor-pointer hover:border-red-500 transition-colors">
                      <div class="flex items-start">
                        <div class="flex items-center h-5 mt-1">
                          <input 
                            id="payment-plin" 
                            name="paymentMethod" 
                            type="radio" 
                            value="plin" 
                            class="h-4 w-4 text-red-600 border-gray-300 focus:ring-red-500"
                          >
                        </div>
                        <div class="ml-3">
                          <label for="payment-plin" class="font-medium text-gray-800">Plin</label>
                          <p class="text-sm text-gray-600 mt-1">Paga rápido y seguro con Plin</p>
                        </div>
                        <div class="ml-auto">
                          <img src="https://via.placeholder.com/40x25" alt="Plin" class="h-8">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Credit Card Form -->
                <div id="card-payment-form" class="mb-6">
                  <div class="mb-4">
                    <label for="card-number" class="block text-sm font-medium text-gray-700 mb-1">
                      Número de tarjeta <span class="text-red-600">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="card-number" 
                      name="cardNumber" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                      placeholder="1234 5678 9012 3456"
                    >
                  </div>
                  
                  <div class="grid grid-cols-2 gap-4">
                    <div>
                      <label for="card-expiry" class="block text-sm font-medium text-gray-700 mb-1">
                        Fecha de vencimiento <span class="text-red-600">*</span>
                      </label>
                      <input 
                        type="text" 
                        id="card-expiry" 
                        name="cardExpiry" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                        placeholder="MM/AA"
                      >
                    </div>
                    <div>
                      <label for="card-cvv" class="block text-sm font-medium text-gray-700 mb-1">
                        CVV <span class="text-red-600">*</span>
                      </label>
                      <input 
                        type="text" 
                        id="card-cvv" 
                        name="cardCvv" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                        placeholder="123"
                      >
                    </div>
                  </div>
                  
                  <div class="mt-4">
                    <label for="card-name" class="block text-sm font-medium text-gray-700 mb-1">
                      Nombre en la tarjeta <span class="text-red-600">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="card-name" 
                      name="cardName" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                      placeholder="Como aparece en la tarjeta"
                    >
                  </div>
                  
                  <div class="mt-4">
                    <div class="flex items-start">
                      <div class="flex items-center h-5">
                        <input 
                          id="save-card" 
                          name="saveCard" 
                          type="checkbox" 
                          class="h-4 w-4 text-red-600 border-gray-300 rounded focus:ring-red-500"
                        >
                      </div>
                      <div class="ml-3 text-sm">
                        <label for="save-card" class="text-gray-600">
                          Guardar esta tarjeta para futuras compras
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Navigation Buttons -->
                <div class="flex flex-col sm:flex-row gap-3">
                  <button 
                    type="button" 
                    class="flex-1 border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-3 px-4 rounded-md transition-colors"
                    onclick="goToStep(2)"
                  >
                    Volver
                  </button>
                  <button 
                    type="submit" 
                    class="flex-1 bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-md transition-colors"
                  >
                    Finalizar Compra
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Column - Order Summary -->
      <div class="w-full lg:w-1/3">
        <div class="bg-white rounded-lg shadow-sm p-6 mb-4">
          <h2 class="text-lg font-bold mb-4">Resumen de la compra</h2>
          
          <div class="mb-6">
            <div class="flex items-center mb-4">
              <a href="/cart" class="text-blue-600 text-sm hover:underline">Volver a carrito</a>
            </div>
            
            <% cart.forEach(item => { %>
              <div class="flex items-center pb-4 mb-4 border-b border-gray-200">
                <div class="w-16 h-16 flex-shrink-0 bg-gray-100 rounded-md overflow-hidden mr-4">
                  <img src="<%= item.image %>" alt="<%= item.name %>" class="w-full h-full object-contain">
                </div>
                <div class="flex-1">
                  <h3 class="text-sm font-medium"><%= item.name %></h3>
                  <div class="text-sm text-red-600 font-bold mt-1">S/ <%= item.price.toFixed(2) %></div>
                </div>
              </div>
            <% }); %>
          </div>
          
          <!-- Coupon Code -->
          <div class="mb-4">
            <div class="flex gap-2">
              <input 
                type="text" 
                placeholder="Código" 
                class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
              >
              <button class="bg-gray-800 hover:bg-black text-white px-4 py-2 rounded-md text-sm">Aplicar</button>
            </div>
          </div>
          
          <!-- Order Totals -->
          <div class="border-t border-gray-200 pt-4 mb-4">
            <div class="flex justify-between mb-2">
              <span class="text-gray-600">Subtotal</span>
              <span class="font-medium">S/ <%= total.toFixed(2) %></span>
            </div>
            
            <div class="flex justify-between mb-2">
              <span class="text-gray-600">Envío</span>
              <span class="text-green-600 font-medium">Gratis</span>
            </div>
            
            <div class="flex justify-between font-bold text-lg mt-2">
              <span>Total</span>
              <span>S/ <%= total.toFixed(2) %></span>
            </div>
          </div>
        </div>
        
        <!-- Payment Methods Preview -->
        <div class="bg-white rounded-lg shadow-sm p-4">
          <p class="text-sm text-center text-gray-600 mb-2">En Coolbox puedes pagar mediante:</p>
          <div class="flex justify-center gap-2 mb-4">
            <img src="https://via.placeholder.com/40x25" alt="Visa" class="h-6">
            <img src="https://via.placeholder.com/40x25" alt="Mastercard" class="h-6">
            <img src="https://via.placeholder.com/40x25" alt="American Express" class="h-6">
            <img src="https://via.placeholder.com/40x25" alt="PayPal" class="h-6">
            <img src="https://via.placeholder.com/40x25" alt="Yape" class="h-6">
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-xs text-gray-600">
            <div class="flex items-center">
              <i class="fas fa-truck text-gray-500 mr-2 text-lg"></i>
              <span>Envío a domicilio de tu compra y entrega al instante</span>
            </div>
            <div class="flex items-center">
              <i class="fas fa-credit-card text-gray-500 mr-2 text-lg"></i>
              <span>Pago con tarjetas de crédito, débito y pago efectivo</span>
            </div>
            <div class="flex items-center">
              <i class="fas fa-store text-gray-500 mr-2 text-lg"></i>
              <span>Sigue tu ruta, recorrido en más de 30 tiendas a nivel de país</span>
            </div>
            <div class="flex items-center">
              <i class="fas fa-percentage text-gray-500 mr-2 text-lg"></i>
              <span>Hasta 6 cuotas sin intereses en productos seleccionados</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Delivery method toggle
    const deliveryHome = document.getElementById('delivery-home');
    const deliveryStore = document.getElementById('delivery-store');
    const homeDeliveryForm = document.getElementById('home-delivery-form');
    const storePickupForm = document.getElementById('store-pickup-form');
    
    if (deliveryHome && deliveryStore && homeDeliveryForm && storePickupForm) {
      deliveryHome.addEventListener('change', function() {
        if (this.checked) {
          homeDeliveryForm.classList.remove('hidden');
          storePickupForm.classList.add('hidden');
        }
      });
      
      deliveryStore.addEventListener('change', function() {
        if (this.checked) {
          homeDeliveryForm.classList.add('hidden');
          storePickupForm.classList.remove('hidden');
        }
      });
    }
    
    // Payment method toggle
    const paymentCard = document.getElementById('payment-card');
    const paymentYape = document.getElementById('payment-yape');
    const paymentPlin = document.getElementById('payment-plin');
    const cardPaymentForm = document.getElementById('card-payment-form');
    
    if (paymentCard && paymentYape && paymentPlin && cardPaymentForm) {
      paymentCard.addEventListener('change', function() {
        if (this.checked) {
          cardPaymentForm.classList.remove('hidden');
        }
      });
      
      paymentYape.addEventListener('change', function() {
        if (this.checked) {
          cardPaymentForm.classList.add('hidden');
        }
      });
      
      paymentPlin.addEventListener('change', function() {
        if (this.checked) {
          cardPaymentForm.classList.add('hidden');
        }
      });
    }
  });
  
  // Step navigation
  function goToStep(step) {
    // Hide all tabs
    document.getElementById('tab-identification').classList.add('hidden');
    document.getElementById('tab-delivery').classList.add('hidden');
    document.getElementById('tab-payment').classList.add('hidden');
    
    // Reset all step indicators
    document.getElementById('step-1-indicator').classList.remove('bg-red-600', 'text-white');
    document.getElementById('step-1-indicator').classList.add('bg-gray-300', 'text-gray-600');
    document.getElementById('step-2-indicator').classList.remove('bg-red-600', 'text-white');
    document.getElementById('step-2-indicator').classList.add('bg-gray-300', 'text-gray-600');
    document.getElementById('step-3-indicator').classList.remove('bg-red-600', 'text-white');
    document.getElementById('step-3-indicator').classList.add('bg-gray-300', 'text-gray-600');
    
    // Reset connector lines
    document.getElementById('line-1-2').classList.remove('bg-red-600');
    document.getElementById('line-1-2').classList.add('bg-gray-300');
    document.getElementById('line-2-3').classList.remove('bg-red-600');
    document.getElementById('line-2-3').classList.add('bg-gray-300');
    
    // Show selected tab and update indicators
    if (step === 1) {
      document.getElementById('tab-identification').classList.remove('hidden');
      document.getElementById('step-1-indicator').classList.remove('bg-gray-300', 'text-gray-600');
      document.getElementById('step-1-indicator').classList.add('bg-red-600', 'text-white');
    } else if (step === 2) {
      document.getElementById('tab-delivery').classList.remove('hidden');
      document.getElementById('step-1-indicator').classList.remove('bg-gray-300', 'text-gray-600');
      document.getElementById('step-1-indicator').classList.add('bg-red-600', 'text-white');
      document.getElementById('step-2-indicator').classList.remove('bg-gray-300', 'text-gray-600');
      document.getElementById('step-2-indicator').classList.add('bg-red-600', 'text-white');
      document.getElementById('line-1-2').classList.remove('bg-gray-300');
      document.getElementById('line-1-2').classList.add('bg-red-600');
    } else if (step === 3) {
      document.getElementById('tab-payment').classList.remove('hidden');
      document.getElementById('step-1-indicator').classList.remove('bg-gray-300', 'text-gray-600');
      document.getElementById('step-1-indicator').classList.add('bg-red-600', 'text-white');
      document.getElementById('step-2-indicator').classList.remove('bg-gray-300', 'text-gray-600');
      document.getElementById('step-2-indicator').classList.add('bg-red-600', 'text-white');
      document.getElementById('step-3-indicator').classList.remove('bg-gray-300', 'text-gray-600');
      document.getElementById('step-3-indicator').classList.add('bg-red-600', 'text-white');
      document.getElementById('line-1-2').classList.remove('bg-gray-300');
      document.getElementById('line-1-2').classList.add('bg-red-600');
      document.getElementById('line-2-3').classList.remove('bg-gray-300');
      document.getElementById('line-2-3').classList.add('bg-red-600');
    }
    
    // Scroll to top
    window.scrollTo(0, 0);
  }
</script>

<script>
  const checkoutData = {
    identification: {},
    delivery: {},
    payment: {}
  };

  // Función para cambiar de paso
  function goToStep(step) {
    document.querySelectorAll('#checkout-tabs > div').forEach(tab => tab.classList.add('hidden'));
    document.getElementById(`tab-${['', 'identification', 'delivery', 'payment'][step]}`).classList.remove('hidden');
  }

  function handleIdentificationStep() {
    const email = document.getElementById('email').value.trim();
    const firstName = document.getElementById('firstName').value.trim();
    const lastName = document.getElementById('lastName').value.trim();
    const dni = document.getElementById('dni').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const terms = document.getElementById('terms').checked;

    if (!email || !firstName || !lastName || !terms) {
      alert("Por favor, complete los campos obligatorios y acepte los términos.");
      return;
    }

    checkoutData.identification = { email, firstName, lastName, dni, phone };
    goToStep(2);
  }

  // Paso 2: Entrega
  function handleDeliveryStep() {
    const deliveryMethod = document.querySelector('input[name="deliveryMethod"]:checked').value;
    let deliveryInfo = { deliveryMethod };

    if (deliveryMethod === 'home') {
      const address = document.getElementById('address').value.trim();
      const district = document.getElementById('district').value;
      const city = document.getElementById('city').value;
      const reference = document.getElementById('reference').value.trim();

      if (!address || !district || !city) {
        alert("Por favor, completa todos los campos de dirección.");
        return;
      }

      deliveryInfo = { ...deliveryInfo, address, district, city, reference };
    } else {
      const storeLocation = document.getElementById('store-location').value;
      if (!storeLocation) {
        alert("Selecciona una tienda para recoger.");
        return;
      }

      deliveryInfo = { ...deliveryInfo, storeLocation };
    }

    checkoutData.delivery = deliveryInfo;
    goToStep(3);
  }

  // Paso 3: Pago
  document.getElementById("payment-form").addEventListener("submit", async function (e) {
    e.preventDefault();

    const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;

    checkoutData.payment = { paymentMethod };

    try {
      const response = await fetch("/checkout", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(checkoutData),
      });

      if (response.redirected) {
        window.location.href = response.url;
      } else {
        const result = await response.json();
        alert(result.message || "Hubo un problema");
      }
    } catch (error) {
      console.error("Error al procesar el pedido:", error);
      alert("Ocurrió un error inesperado");
    }
  });

  // Mostrar u ocultar campos de entrega según selección
  document.querySelectorAll('input[name="deliveryMethod"]').forEach(input => {
    input.addEventListener('change', function () {
      if (this.value === 'home') {
        document.getElementById('home-delivery-form').classList.remove('hidden');
        document.getElementById('store-pickup-form').classList.add('hidden');
      } else {
        document.getElementById('home-delivery-form').classList.add('hidden');
        document.getElementById('store-pickup-form').classList.remove('hidden');
      }
    });
  });
</script>


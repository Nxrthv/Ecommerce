<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | TechStore Admin</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-layout">
    <aside class="sidebar">
      <div class="sidebar-header">
        <h2>GEN Z - Admin</h2>
      </div>
      <nav class="sidebar-nav">
        <ul>
          <li class="active">
            <a href="/admin">
              <i class="fas fa-box"></i>
              Products
            </a>
          </li>
          <li>
            <a href="#">
              <i class="fas fa-shopping-cart"></i>
              Orders
            </a>
          </li>
          <li>
            <a href="#">
              <i class="fas fa-tags"></i>
              Categories
            </a>
          </li>
          <li>
            <a href="#">
              <i class="fas fa-users"></i>
              Customers
            </a>
          </li>
        </ul>
      </nav>
      <div class="sidebar-footer">
        <a href="/" target="_blank">
          <i class="fas fa-external-link-alt"></i>
          View Store
        </a>
      </div>
    </aside>
    
    <main class="content">
      <header class="content-header">
        <h1>Products</h1>
        <a href="/admin/product/new" class="btn btn-primary">
          <i class="fas fa-plus"></i>
          Add New Product
        </a>
      </header>
      
      <div class="content-body">
        <div class="card">
          <div class="card-body">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Price</th>
                  <th>Category</th>
                  <th>Stock</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(product => { %>
                  <tr>
                    <td>
                      <img src="<%= product.image %>" alt="<%= product.name %>" class="product-thumbnail">
                    </td>
                    <td><%= product.name %></td>
                    <td>$<%= product.price.toFixed(2) %></td>
                    <td><%= product.category %></td>
                    <td><%= product.stock %></td>
                    <td class="actions">
                      <a href="/admin/product/edit/<%= product.id %>" class="btn btn-sm btn-secondary">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/admin/product/delete/<%= product.id %>" method="POST" class="inline-form">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
  
  <script src="/js/admin.js"></script>
</body>
</html>
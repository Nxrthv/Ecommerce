  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Hide loader when page is loaded
    window.addEventListener('load', function() {
      document.querySelector('.cont-loader').style.opacity = '0';
      setTimeout(function() {
        document.querySelector('.cont-loader').style.display = 'none';
      }, 500);
    });
    
    // Sort dropdown toggle
    const sortButton = document.getElementById('sortButton');
    const sortDropdown = document.querySelector('.sort-dropdown');
    
    sortButton.addEventListener('click', function() {
      sortDropdown.classList.toggle('open');
    });
    
    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
      if (!sortDropdown.contains(event.target)) {
        sortDropdown.classList.remove('open');
      }
    });
    
    // Load data from JSON file
    document.addEventListener('DOMContentLoaded', function() {
      // Fetch the JSON data
      fetch('/data/products.json')
        .then(response => response.json())
        .then(data => {
          // Initialize the page with data
          renderCategories(data.categories);
          renderProducts(data.products);
          
          // Set up event listeners for filtering
          setupCategoryFilters(data.categories, data.products);
          setupProductFilters(data.products);
          setupSortOptions(data.products);
        })
        .catch(error => {
          console.error('Error loading data:', error);
          showErrorMessage();
        });
    });
    
    // Render categories
    function renderCategories(categories) {
      const categoryGrid = document.querySelector('.category-grid');
      categoryGrid.innerHTML = '';
      
      categories.forEach(category => {
        const categoryCard = document.createElement('div');
        categoryCard.className = 'category-card';
        categoryCard.dataset.category = category.slug;
        
        categoryCard.innerHTML = `
          <div class="category-image">
            <img src="${category.image}" alt="${category.name}">
            <div class="category-badge">${category.productCount} Productos</div>
          </div>
          <div class="category-content">
            <h3 class="category-title">${category.name}</h3>
            <p class="category-description">${category.description}</p>
            <div class="category-meta">
              <div class="category-count">${category.productCount} Productos</div>
              <a href="/category/${category.slug}" class="category-link">
                Ver Categoría <i class="fas fa-arrow-right"></i>
              </a>
            </div>
          </div>
        `;
        
        categoryGrid.appendChild(categoryCard);
      });
    }
    
    // Render products
    function renderProducts(products) {
      const productGrid = document.querySelector('.product-grid');
      productGrid.innerHTML = '';
      
      if (products.length === 0) {
        productGrid.innerHTML = `
          <div class="no-products">
            <div class="no-products-icon">
              <i class="fas fa-search"></i>
            </div>
            <h3 class="no-products-text">No se encontraron productos</h3>
            <p class="no-products-subtext">Intenta con otros filtros o categorías</p>
            <button class="btn-primary" onclick="resetFilters()">Ver todos los productos</button>
          </div>
        `;
        return;
      }
      
      products.forEach(product => {
        const productCard = document.createElement('div');
        productCard.className = 'product-card';
        productCard.dataset.category = product.category;
        productCard.dataset.tags = product.tags.join(' ');
        
        let badgeHTML = '';
        if (product.isNew) {
          badgeHTML = '<div class="product-badge badge-new">Nuevo</div>';
        } else if (product.discount > 0) {
          badgeHTML = `<div class="product-badge badge-sale">-${product.discount}%</div>`;
        }
        
        let oldPriceHTML = '';
        let discountHTML = '';
        if (product.discount > 0) {
          const oldPrice = (product.price * 100 / (100 - product.discount)).toFixed(2);
          oldPriceHTML = `<div class="old-price">$${oldPrice}</div>`;
          discountHTML = `<div class="discount-percent">-${product.discount}%</div>`;
        }
        
        productCard.innerHTML = `
          ${badgeHTML}
          <div class="product-image">
            <img src="${product.image}" alt="${product.name}">
            <div class="product-actions">
              <button class="product-action-btn" title="Añadir a favoritos">
                <i class="far fa-heart"></i>
              </button>
              <button class="product-action-btn" title="Vista rápida">
                <i class="fas fa-eye"></i>
              </button>
              <button class="product-action-btn" title="Comparar">
                <i class="fas fa-exchange-alt"></i>
              </button>
            </div>
          </div>
          <div class="product-content">
            <div class="product-category">${product.categoryName}</div>
            <h3 class="product-title">${product.name}</h3>
            <p class="product-description">${product.description}</p>
            <div class="product-rating">
              <div class="rating-stars">
                ${getRatingStars(product.rating)}
              </div>
              <div class="rating-count">(${product.reviews})</div>
            </div>
            <div class="product-price">
              <div class="current-price">$${product.price.toFixed(2)}</div>
              ${oldPriceHTML}
              ${discountHTML}
            </div>
            <button class="btn-add-cart">Añadir al Carrito</button>
          </div>
        `;
        
        productGrid.appendChild(productCard);
      });
    }
    
    // Generate rating stars
    function getRatingStars(rating) {
      let stars = '';
      const fullStars = Math.floor(rating);
      const halfStar = rating % 1 >= 0.5;
      const emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
      
      for (let i = 0; i < fullStars; i++) {
        stars += '<i class="fas fa-star"></i>';
      }
      
      if (halfStar) {
        stars += '<i class="fas fa-star-half-alt"></i>';
      }
      
      for (let i = 0; i < emptyStars; i++) {
        stars += '<i class="far fa-star"></i>';
      }
      
      return stars;
    }
    
    // Setup category filters
    function setupCategoryFilters(categories, products) {
      const filterButtons = document.querySelectorAll('.filter-button');
      
      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          // Update active state
          filterButtons.forEach(btn => btn.classList.remove('active'));
          this.classList.add('active');
          
          const filter = this.dataset.filter;
          
          // Filter categories
          const categoryCards = document.querySelectorAll('.category-card');
          
          if (filter === 'all') {
            categoryCards.forEach(card => card.style.display = 'block');
          } else {
            categoryCards.forEach(card => {
              if (card.dataset.category === filter) {
                card.style.display = 'block';
              } else {
                card.style.display = 'none';
              }
            });
          }
          
          // Filter products based on category
          filterProductsByCategory(products, filter);
        });
      });
    }
    
    // Filter products by category
    function filterProductsByCategory(products, category) {
      let filteredProducts;
      
      if (category === 'all') {
        filteredProducts = [...products];
      } else {
        filteredProducts = products.filter(product => product.category === category);
      }
      
      renderProducts(filteredProducts);
    }
    
    // Setup product filters (new, featured, sale)
    function setupProductFilters(products) {
      const filterTabs = document.querySelectorAll('.filter-tab');
      
      filterTabs.forEach(tab => {
        tab.addEventListener('click', function() {
          // Update active state
          filterTabs.forEach(t => t.classList.remove('active'));
          this.classList.add('active');
          
          const filter = this.dataset.filter;
          let filteredProducts;
          
          switch (filter) {
            case 'new':
              filteredProducts = products.filter(product => product.isNew);
              break;
            case 'featured':
              filteredProducts = products.filter(product => product.isFeatured);
              break;
            case 'sale':
              filteredProducts = products.filter(product => product.discount > 0);
              break;
            default:
              filteredProducts = [...products];
          }
          
          renderProducts(filteredProducts);
        });
      });
    }
    
    // Setup sort options
    function setupSortOptions(products) {
      const sortOptions = document.querySelectorAll('.sort-option');
      
      sortOptions.forEach(option => {
        option.addEventListener('click', function() {
          // Update active state
          sortOptions.forEach(opt => opt.classList.remove('active'));
          this.classList.add('active');
          
          // Update button text
          document.querySelector('.sort-button span').textContent = this.textContent;
          
          // Close dropdown
          document.querySelector('.sort-dropdown').classList.remove('open');
          
          const sortBy = this.dataset.sort;
          let sortedProducts = [...products];
          
          switch (sortBy) {
            case 'price-low':
              sortedProducts.sort((a, b) => a.price - b.price);
              break;
            case 'price-high':
              sortedProducts.sort((a, b) => b.price - a.price);
              break;
            case 'name-asc':
              sortedProducts.sort((a, b) => a.name.localeCompare(b.name));
              break;
            case 'name-desc':
              sortedProducts.sort((a, b) => b.name.localeCompare(a.name));
              break;
            default:
              // Default sorting (by relevance or featured)
              sortedProducts.sort((a, b) => (b.isFeatured ? 1 : 0) - (a.isFeatured ? 1 : 0));
          }
          
          renderProducts(sortedProducts);
        });
      });
    }
    
    // Reset all filters
    function resetFilters() {
      // Reset category filters
      document.querySelectorAll('.filter-button').forEach(btn => {
        btn.classList.remove('active');
        if (btn.dataset.filter === 'all') {
          btn.classList.add('active');
        }
      });
      
      // Reset product filters
      document.querySelectorAll('.filter-tab').forEach(tab => {
        tab.classList.remove('active');
        if (tab.dataset.filter === 'all') {
          tab.classList.add('active');
        }
      });
      
      // Reset sort
      document.querySelectorAll('.sort-option').forEach(opt => {
        opt.classList.remove('active');
        if (opt.dataset.sort === 'default') {
          opt.classList.add('active');
        }
      });
      
      document.querySelector('.sort-button span').textContent = 'Ordenar por';
      
      // Reload data
      fetch('/data/products.json')
        .then(response => response.json())
        .then(data => {
          renderCategories(data.categories);
          renderProducts(data.products);
        });
    }
    
    // Show error message if data loading fails
    function showErrorMessage() {
      const categoryGrid = document.querySelector('.category-grid');
      const productGrid = document.querySelector('.product-grid');
      
      categoryGrid.innerHTML = `
        <div class="no-products" style="grid-column: 1 / -1;">
          <div class="no-products-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <h3 class="no-products-text">Error al cargar las categorías</h3>
          <p class="no-products-subtext">Por favor, intenta recargar la página</p>
        </div>
      `;
      
      productGrid.innerHTML = `
        <div class="no-products">
          <div class="no-products-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <h3 class="no-products-text">Error al cargar los productos</h3>
          <p class="no-products-subtext">Por favor, intenta recargar la página</p>
          <button class="btn-primary" onclick="location.reload()">Recargar página</button>
        </div>
      `;
    }
  </script>
